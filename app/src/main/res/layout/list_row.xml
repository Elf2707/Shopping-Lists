<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list.row.main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/list.row.layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:background="@color/itemDoneBack">

        <ImageView
            android:id="@+id/list.row.expandicon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_expand_white" />

        <TextView
            android:id="@+id/list.row.bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list.row.expandicon"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/list.row.expandicon"
            android:layout_weight="0.5"
            android:singleLine="false"
            android:text="Done 10 of 10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textSub"
            android:typeface="serif" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_toLeftOf="@+id/list.row.total"
            android:layout_alignBottom="@+id/list.row.total"
            android:src="@drawable/ic_backs_gray"
            android:layout_marginBottom="1dip" />

        <TextView
            android:id="@+id/list.row.total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.3"
            android:singleLine="false"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentBottom="false"
            android:textColor="@color/textSub"
            android:layout_alignBottom="@+id/list.row.bought"
            android:layout_marginRight="10dip"
            android:typeface="serif" />

        <TextView
            android:id="@+id/list.row.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/list.row.expandicon"
            android:layout_toRightOf="@id/list.row.expandicon"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="10dip"
            android:textColor="@color/textMain"
            android:typeface="serif" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/list.row.layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/selectableItemBackground" />

</FrameLayout>
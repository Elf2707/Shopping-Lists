<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lorien.ua.shoppinglist">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.SplashActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.activities.EditListActivity"
            android:label="@string/shopping_list.title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.EditItemActivity"
            android:label="@string/title_activity_edit_list_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.Preferences"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
